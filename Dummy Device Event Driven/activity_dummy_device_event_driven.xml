<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DummyDeviceActivity">

    <TextView
        android:id="@+id/text_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connecting..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/dummy_sensor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dummy Sensor :"

        app:layout_constraintBottom_toBottomOf="@+id/dummy_sensor_text"
        app:layout_constraintEnd_toStartOf="@+id/dummy_sensor_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dummy_sensor_text"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/dummy_sensor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/dummy_control_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dummy_sensor_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dummy_control_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dummy Control"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@+id/dummy_sensor_text"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/push_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Push Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dummy_sensor_text" />
</android.support.constraint.ConstraintLayout>